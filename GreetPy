def greet(name):
    """
    Greets the user with a personalized message.

    Parameters:
        name (str): The name of the user.

    Returns:
        str: A greeting message.
    """
    return "Hello, " + name + "!"

if __name__ == "__main__":
    user_name = input("Enter your name: ")
    greeting = greet(user_name)
    print(greeting)
